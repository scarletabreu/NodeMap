<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<DialogPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Distance:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="distanceField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Time:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="timeField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Cost:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="costField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Transport Type:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <ComboBox fx:id="transportComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </GridPane>
    </content>
</DialogPane>